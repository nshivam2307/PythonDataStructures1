#Using data structures to find the average
a=[10,50,40,77,66,45,34,26,79]
b=sum(a)
s=float(b)
c=len(a)
d=s/c
print('AVERAGE=',d)

#for any list
mylist=[]
count=0
while True:
    a=input('Enter the number:')
    if a=='Done':break
    count=count+1
    b=float(a)
    mylist.append(b)
total=sum(mylist)
average=total/count
print('AVERAGE=',average)    

#Split
a='My very educated mother just shown us nine planets'
b=a.split()
print(b)
print(b[0:4])

#writing a code using split()to extract the number at the end of the line
text = "X-DSPAM -confidence:     0.8475 shivam@gmail.com"
a=text.split()
print(a)
b=a[2]
c=float(b)
print(c)
d=c+10
print(d)
e=a[3]
print(e)
piece=e.split('@')
print(piece)
print(piece[1])

x=list(range(5))
print(x)

#split() and append
#create an empty list to add the lines in it by using append
mylist=list()
a=input('enter the file name:')
file=open(a)
for line in file:
    mylist.append(line.split())
    mylist.sort()
print(mylist)  
